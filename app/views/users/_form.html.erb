    <%= f.text_field :lname %>
  </div>
  <div class="field">
    <%= f.label :salary %><br>
    <%= f.text_field :salary %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%#= f.submit, :class => 'submit_form' %>
    <%= f.submit 'Button Name',:id=>"hellloform", :class => 'my_form_btn',:style=>"display:none;" %>
  </div>
  
  
<% end %>



